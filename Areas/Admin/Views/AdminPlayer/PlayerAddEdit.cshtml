@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

@model PlayerModel;

<div class="container border border-gray rounded p-5 shadow">

    <h2><i class="bi bi-gear me-2 pb-5" style="font-size: 25px"></i>Player Details</h2>

    <hr />

    <form class="pt-3" method="post" asp-area="Admin" asp-controller="AdminPlayer" asp-action="InsertUpdatePlayer">

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="PlayerName" placeholder="Player Name" aria-label="Player name">
            <span asp-validation-for="PlayerName" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="Age" placeholder="Age" aria-label="Age">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        
        <div class="col my-4">
            <input type="date" class="form-control" asp-for="BirthDate" placeholder="Birth Date" aria-label="Birth Date">
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="PlayerImage" placeholder="Image Address" aria-label="Player Image">
            <span asp-validation-for="PlayerImage" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <select class="form-control" asp-for="CityID" asp-items="@(new SelectList(ViewBag.CityList,"CityID","CityName"))">
                <option value="">Select City</option>
            </select>
            <span asp-validation-for="CityID" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="BattingStyle" placeholder="Batting Style" aria-label="Batting Style">
            <span asp-validation-for="BattingStyle" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="BowlingStyle" placeholder="Bowling Style" aria-label="Bowling Style">
            <span asp-validation-for="BowlingStyle" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="Role" placeholder="Role" aria-label="Role">
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <input type="text" class="form-control" asp-for="Description" placeholder="Description" aria-label="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col mt-4">

            <input type="hidden" name="PlayerID" id="PlayerID" value="@Model.PlayerID" />

            <button class="btn btn-primary" type="submit">Submit</button>

            <form asp-area="Admin" asp-controller="AdminPlayer" asp-action="PlayerList">
                <div class="col mt-4">
                    <button class="btn btn-secondary" type="submit">Back</button>
                </div>
            </form>

        </div>

        

    </form>

    

</div>




