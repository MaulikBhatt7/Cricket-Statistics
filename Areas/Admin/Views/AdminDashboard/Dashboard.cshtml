@using System.Data;
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Home Page";
}

<style>

    .card{

        width: 200px;
        border: 3px solid rgba(100 , 150 , 250 , 0.2);
        border-radius: 10px;
        position: relative;
        overflow: hidden;
        transition: all 0.2s linear;
    }

    .card h1{

        background-color: rgba(50 , 80 , 250 , 0.1);
        font-size: 15px;
        font-weight: 600;
        z-index: 2;
        border-radius: 20px;
        text-align: center;
    }

    .card::before{

        content: "";
        width: 100%;
        height: 2px;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(100 , 150 , 250 , 0.4);
        /*box-shadow: 0px 10px 100px 50px rgba(200 , 230 , 200 , 0.5);*/
        transition: all 0.2s linear;

    }

    .card:hover::before{

       height: 100%;
       background-color: rgba(100 , 150 , 250 , 0.1);
    }

</style>

<div class="text-center">
    <h1 class="display-4">Statistics</h1>

    <div class="d-flex justify-content-start align-items-center flex-wrap">

        @foreach (DataRow dr in Model.Rows)
        {

            <div class="px-4 py-3 mx-2 rounded card">

                <h1 class="my-2 py-1 px-2">
                    @dr["DataName"]
                </h1>
                <p class="fs-5 fw-bold">@dr["DataCount"]</p>

            </div>

        }

    </div

</div>
